  <script>
    const iyaBtn = document.getElementById('iyaBtn');
    const nggakBtn = document.getElementById('nggakBtn');

    iyaBtn.addEventListener('click', () => {
      for(let i=0; i<50; i++){
        const confetti = document.createElement('div');
        confetti.classList.add('confetti');
        confetti.style.left = Math.random() * window.innerWidth + 'px';
        confetti.style.background = `hsl(${Math.random() * 360}, 70%, 60%)`;
        confetti.style.width = confetti.style.height = Math.random() * 10 + 5 + 'px';
        document.body.appendChild(confetti);
        setTimeout(() => confetti.remove(), 3000);
      }
      alert('Yeay! Kita resmi ya üòçüíï');
    });

    nggakBtn.addEventListener('click', () => {
      alert('Waduh üòÖ jangan sedih ya, bossku!');
    });
  </script>
